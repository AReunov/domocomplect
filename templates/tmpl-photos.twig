{% extends "base.twig" %}

{% block content %}
    <main class="content">
        <div class="container content_wrapper">
            {% if left_sidebar %}
                <aside class="content_sidebar">
                    {{ left_sidebar }}
                </aside>
            {% endif %}
            <article class="content_body">
                {% if post.title %}
                    <h1 class="post-title">{{ post.title }}</h1>
                {% endif %}
                <div id="container-thumbs">
                    {% for photo in post.meta('photos') %}
                        <a href="{{ photo.url }}" class="item" data-fancybox="gallery">
                            <img src="{{ Image(photo.url) | resize(270) }}" alt="">
                        </a>
                    {% endfor %}
                </div>

                {% if bottom_contact_form %}
                    {{ bottom_contact_form }}

                {% endif %}
            </article>
        </div>
    </main>
{% endblock %}
